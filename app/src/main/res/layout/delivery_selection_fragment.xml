<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_above="@+id/delivery_save_button"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieferung wählen"/>

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="Bitte geben Sie die Kennung Ihrer aktuellen Lieferung ein."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/delivery_text"
            android:padding="10dp"
            android:hint="hier eingeben"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_above="@+id/delivery_save_button"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:text="Das Ändern der Lieferung erfolgt durch einen Neustart der Applikation oder die Einstellungen."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="Speichern"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/delivery_save_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>